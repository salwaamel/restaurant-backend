{
  "compilerOptions": {
    "target": "es2016",       
    "lib": [
      "es2016",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],    
    "module": "CommonJS",                                
    "moduleResolution": "node",                     
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true       
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}